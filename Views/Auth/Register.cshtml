@model ManagementSystemCV.Models.User

@{
    ViewData["Title"] = "Register";
}

<div class="flex flex-col items-center justify-center">
    <div
        class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <div class="flex flex-col items-center">
                <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
                    <img class="w-8 h-8 mr-2" src="/logo.png" alt="Peaky Blinders">
                    Peaky Blinders
                </a>
            </div>
            <h1 class="text-2xl text-center font-bold leading-tight tracking-tight text-gray-900 dark:text-white">
                Crea tu cuenta
            </h1>
            <p class="text-sm font-bold text-gray-900 dark:text-white">
                Usa una de tus redes
            </p>

            <button type="button"
                class="w-full text-primary-600 bg-white border border-primary-600 hover:bg-primary-600 hover:text-white focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 flex items-center justify-center gap-2 dark:bg-transparent dark:border-primary-600 dark:text-primary-600 dark:hover:bg-primary-700 dark:hover:text-white dark:focus:ring-primary-800">
                <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                    viewBox="0 0 18 19">
                    <path fill-rule="evenodd"
                        d="M8.842 18.083a8.8 8.8 0 0 1-8.65-8.948 8.841 8.841 0 0 1 8.8-8.652h.153a8.464 8.464 0 0 1 5.7 2.257l-2.193 2.038A5.27 5.27 0 0 0 9.09 3.4a5.882 5.882 0 0 0-.2 11.76h.124a5.091 5.091 0 0 0 5.248-4.057L14.3 11H9V8h8.34c.066.543.095 1.09.088 1.636-.086 5.053-3.463 8.449-8.4 8.449l-.186-.002Z"
                        clip-rule="evenodd" />
                </svg>
                Ingresa con Google
            </button>
            <p class="text-sm font-bold text-gray-900 dark:text-white">
                O usa tu correo electrónico
            </p>

            <form asp-action="Register" asp-controller="Auth" method="post"
                class="space-y-4 md:space-y-6" action="#">
                <div>
                    <label asp-for="FirstName" 
                    class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Nombres
                    </label>
                    <input type="text" name="FirstName" asp-for="FirstName" placeholder="Escribe tus nombres"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required="">
                </div>
                <div>
                    <label asp-for="LastName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Apellidos
                    </label>
                    <input type="text" name="LastName" asp-for="LastName" placeholder="Escribe tus apellidos"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required="">
                </div>
                <div>
                    <label asp-for="Birthdate" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Fecha de nacimiento
                    </label>
                    <input type="date" name="Birthdate" asp-for="Birthdate" placeholder="Escribe tu contraseña"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required="">
                </div>
                <hr class="my-6 border-gray-300 w-full">
                <p class="text-sm font-bold text-gray-900 dark:text-white">
                    Datos de inicio de sesión
                </p>
                <div>
                    <label asp-for="Email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Correo
                    </label>
                    <input type="email" name="Email" asp-for="Email" placeholder="Escribe tu correo electronico"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required="">
                </div>
                <div>
                    <label asp-for="Password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Contraseña
                    </label>
                    <input type="password" name="Password" asp-for="Password" placeholder="Escribe tu contraseña"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required="">
                </div>
                <hr class="my-6 border-gray-300 w-full">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="TelephonePrefixes"
                            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Prefijo de tu país
                        </label>
                        <input type="text" name="TelephonePrefixes" asp-for="TelephonePrefixes" placeholder="Escribe el prefijo de tu pais"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            required="">
                    </div>
                    <div>
                        <label asp-for="PhoneNumber" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Celular
                        </label>
                        <input type="text" name="PhoneNumber" asp-for="PhoneNumber" placeholder="Escribe tu numero de celular"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            required="">
                    </div>
                </div>
                <div>
                    <label asp-for="City" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Ciudad de residencia
                    </label>
                    <input type="text" name="City" asp-for="City" placeholder="Escribe tu ciudad de residencia"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required="">
                </div>
                <hr class="my-6 border-gray-300 w-full">
                <div>
                    <label asp-for="PictureUrl" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Url de foto de perfil
                    </label>
                    <input type="text" name="PictureUrl" asp-for="PictureUrl" placeholder="Pega la url de tu foto de perfil"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required="">
                </div>
                @* <div>
                    <label for="confirm-password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Confirma tu contraseña
                    </label>
                    <input type="password" name="confirm-password" id="confirm-password"
                        placeholder="Confirma tu contraseña"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required="">
                </div> *@
                <button type="submit"
                    class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    Registrate ahora
                </button>
                <p class="text-sm text-center font-light text-gray-500 dark:text-gray-400">
                    ¿Ya tienes una cuenta?
                    <a href="#" class="font-medium text-primary-600 hover:underline dark:text-primary-500">
                        Inicia Sesión
                    </a>
                </p>
            </form>
        </div>
    </div>
</div>
